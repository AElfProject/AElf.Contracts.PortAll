<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.Runtime.CSharp.ExecutiveTokenPlugin</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="..\..\..\protobuf\acs1.proto">
        <Link>Protobuf/Proto/acs1.proto</Link>
      </Content>
    <Content Include="..\..\..\protobuf\token_contract.proto">
        <Link>Protobuf/Proto/token_contract.proto</Link>
    </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="AElf.Kernel.SmartContract" Version="0.7.0-alpha.2-18004" />
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" LogStandardErrorAsError="true" Command="../../../scripts/generate_contract_stub.sh acs1.proto token_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_stub.bat acs1.proto token_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
